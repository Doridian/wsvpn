{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchDepTypes": ["golang"],
      "enabled": true
    },
    {
      "matchManagers": ["gomod"],
      "matchDepTypes": ["indirect"],
      "enabled": true
    }
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "automergeType": "pr",
  "platformAutomerge": true,
  "automerge": true
}
